<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/background_home"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home View"
        android:gravity="center"
        android:paddingTop="5dp"
        android:textColor="#FF800000"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:background="@drawable/btn_default_pressed"/>
            
            <TextView
                android:id="@+id/vidhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="पूजा विधि"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#FF800000" 
                />

            <TextView
                android:id="@+id/vidhi_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="पूजा विधि "
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:textColor="#FF800000"
                 android:background="@drawable/btn_default_pressed" />
            <TextView
                android:id="@+id/katha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="कथा "
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#FF800000" />

            <TextView
                android:id="@+id/katha_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" कथा body"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#FF800000" 
                 android:background="@drawable/btn_default_pressed"/>

            <TextView
                android:id="@+id/aarti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="आरती"
                android:textSize="20dp"
                android:textStyle="bold" 
                android:textColor="#FF800000"/>

            <TextView
                android:id="@+id/aarti_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aarti body"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="19dp"
                android:textColor="#EE800000"
                android:background="@drawable/btn_default_pressed"
                />

            <TextView
                android:id="@+id/mantra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="मंत्र"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#FF800000" />

            <TextView
                android:id="@+id/mantra_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" मंत्र body"
                android:gravity="center"
                android:textSize="18dp" 
                android:textColor="#FF800000"
                 android:background="@drawable/btn_default_pressed"/>

            <TextView
                android:id="@+id/dhyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ध्यान"
                android:textSize="20dp"
                android:textStyle="bold" 
                android:textColor="#FF800000"/>

            <TextView
                android:id="@+id/dhyan_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" ध्यान body"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#FF800000"
                 android:background="@drawable/btn_default_pressed" />

            <TextView
                android:id="@+id/srota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="स्तोत्र पाठ "
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#FF800000" />

            <TextView
                android:id="@+id/srota_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" स्तोत्र पाठ body"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#FF800000" 
                 android:background="@drawable/btn_default_pressed"/>

            <TextView
                android:id="@+id/kavach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" कवच"
                android:textSize="20dp"
                android:textStyle="bold"
                 android:textColor="#EE800000"/>

            <TextView
                android:id="@+id/kavach_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" कवच body"
                android:gravity="center"
                android:textSize="18dp" 
                android:textColor="#FF800000"
                android:background="@drawable/btn_default_pressed"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>